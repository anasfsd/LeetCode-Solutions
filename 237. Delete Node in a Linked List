class ListNode:
    def __init__(self, x):
        self.val = x
        self.next = None

class Solution:
    def deleteNode(self, node):
        """
        :type node: ListNode
        :rtype: void (modifies linked list in-place)
        """
        # Step 1: Copy next nodeâ€™s value into the given node  (overwriting its value).
        node.val = node.next.val  
        node.next = node.next.next  # Step 2: Delete next node by skipping it
